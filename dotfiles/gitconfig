[color]
  diff = auto
  grep = auto
  interactive = auto
  status = auto
  branch = auto
  status = auto
  ui = auto

[alias]
  st = status
  ci = commit
  cm = commit -m
  b = branch
  d = diff
  ds = diff --staged
  rank = shortlog -sn --no-merges
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  ls = log --pretty=format:"%C(green)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll = log --pretty=format:"%C(green)%h%Cred%d\\ %Cred%s%Cblue\\ [%cn]" --decorate --numstat
  co = checkout
  pom = push origin master
	latest = for-each-ref --count=10 --sort=-committerdate --format='%(committerdate:short) %(refname:short)'

[core]
  editor = subl -w
  excludesfile = /Users/andrielfn/.bash/gitignore_global

[push]
  default = simple

[credential]
  helper = /opt/boxen/bin/boxen-git-credential

